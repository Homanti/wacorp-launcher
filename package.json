{
  "name": "wacorp-launcher",
  "productName": "WacoRP Launcher",
  "build": {
    "win": {
      "icon": "./icon.png"
    }
  },
  "private": true,
  "version": "1.3.8",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:win": "npm run build && electron-builder --win --config",
    "build:publish": "electron-vite build && electron-builder --publish always && gh release edit v%npm_package_version% --draft=false",
    "release:patch": "npm version patch && npm run build:publish",
    "release:minor": "npm version minor && npm run build:publish",
    "release:major": "npm version major && npm run build:publish",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "homanti",
      "repo": "wacorp-launcher"
    }
  ],
  "dependencies": {
    "@xhayper/discord-rpc": "^1.3.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.522.0",
    "minecraft-java-core": "file:../minecraft-java-core",
    "minecraftstatuspinger": "^1.2.2",
    "motion": "^12.18.1",
    "prismarine-nbt": "^2.8.0",
    "react": "^19.1.0",
    "react-canvas-confetti": "^2.0.7",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "react-snowfall": "^2.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/adm-zip": "^0.5.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "sass": "^1.89.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
